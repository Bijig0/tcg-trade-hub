{
  "expo": {
    "name": "TCG Trade Hub",
    "slug": "tcg-trade-hub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#09090b"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.tcgtradehub.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TCG Trade Hub needs your location to find nearby card shops and traders.",
        "NSCameraUsageDescription": "TCG Trade Hub needs camera access to photograph your cards.",
        "NSPhotoLibraryUsageDescription": "TCG Trade Hub needs photo library access to upload card photos.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#09090b"
      },
      "package": "com.tcgtradehub.app",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "scheme": "tcg-trade-hub",
    "plugins": [
      "expo-router",
      "expo-location",
      [
        "expo-image-picker",
        {
          "photosPermission": "TCG Trade Hub needs photo access to upload card photos.",
          "cameraPermission": "TCG Trade Hub needs camera access to photograph your cards."
        }
      ]
    ],
    "newArchEnabled": true,
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bae0bd7a-242a-4840-9356-3890e020c358"
      }
    }
  }
}
