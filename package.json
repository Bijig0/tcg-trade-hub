{
  "name": "tcg-trade-hub",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:site": "pnpm --filter web dev",
    "dev:shop": "pnpm --filter @tcg-trade-hub/shop dev",
    "dev:admin": "npx tsx packages/api/src/graph-sync.ts && (npx tsx packages/api/src/graph/serve.ts & pnpm --filter admin dev)",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "graph:sync": "npx tsx packages/api/src/graph-sync.ts",
    "dev:graph": "npx tsx packages/api/src/graph-sync.ts && npx tsx packages/api/src/graph/serve.ts",
    "dev:mobile": "pnpm --dir apps/mobile exec expo start --port 8082 --clear",
    "studio": "pnpm --filter @tcg-trade-hub/mobile e2e:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0"
}
